<div class="form-control">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<% if (product) { %> <%= product.title %> <% } %>" />
  </div>

  <div class="form-control">
    <label for="imageUrl">Image URL</label>
    <input type="text" name="imageUrl" id="imageUrl" value="<% if (product) { %> <%= product.imageUrl %> <% } %>" />
  </div>

  <div class="form-control">
    <label for="price">Price</label>
    <input type="number" name="price" id="price" step="0.01" value="<% if (product) { %><%= product.price  %><% } %>" />
  </div>

  <div class="form-control">
    <label for="description">Description</label>
    <textarea name="description" id="description" rows="5"><% if (product) { %><%= product.description %> <% } %></textarea>
  </div>

  <% if (product) { %>
    <input type="hidden" name="_id" value="<%= product._id %>">
  <% } %>