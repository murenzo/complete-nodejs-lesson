    <%- include('../includes/navigation.ejs') %>

    <main>
      <% if(products.length) { %>
      <ul>
        <% for(let product of products) { %>
          <li><%= product.data.title %> (<%= product.quantity %>)</li>
        <% } %>
      </ul>
      <% } else { %>
      <h2>No products found in cart.</h2>
      <% } %>
    </main>
